<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_vp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_vp"
        android:layout_width="430dp"
        android:layout_height="238dp"
        android:scaleType="centerCrop"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/grad"
         />

    <TextView
        android:id="@+id/title_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad2"
        android:padding="4dp"
        android:textColor="@color/white"
        tools:text="Movie Name"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_vp"
        app:layout_constraintEnd_toEndOf="@+id/image_vp"
        app:layout_constraintStart_toStartOf="@+id/image_vp" />


</androidx.constraintlayout.widget.ConstraintLayout>